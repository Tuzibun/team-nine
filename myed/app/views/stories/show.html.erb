<h1><%= @story.heading %></h1>
<h2>Author: <%= link_to @story.profile.name, profile_path(@story.profile) %></h2>
<ul>
  <li>Category: <%= @story.category.name %></li>
  <li>Moment: <%= @story.body %></li>
  <li>Lesson(s) Learned: <%= @story.lesson %></li>
</ul>
<img src="<%= @story.photo_url %>">

<div class='story-actions'>

  <form action="<%= story_path(@story) %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="delete">
  </form>

</div>
