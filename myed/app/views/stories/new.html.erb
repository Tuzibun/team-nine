<h1>Add your story!</h1>

<%= form_for @story do |f| %>

<div>
 <%= f.label               :category %>
 <%= f.collection_select(:category_id, Category.all, :id, :name) %>

</div>

<div>
 <%= f.label               :heading %>
 <%= f.text_field          :heading %>
</div>

<div>
 <%= f.label               :body %>
 <%= f.text_field          :body %>
</div>

<div>
 <%= f.label               :lesson %>
 <%= f.text_field          :lesson %>
</div>

<div>
 <%= f.label               :photo_url %>
 <%= f.text_field          :photo_url %>
</div>

<div>
  <%= f.hidden_field       :profile_id, :value => current_user.profile.id %>
</div>

<div>
 <%= f.submit %>
</div>

<% end %>
